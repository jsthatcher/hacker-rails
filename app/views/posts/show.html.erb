<h2><%= @post.title %> </h2>

<p><%= @post.content %> </p>

<%= link_to "Edit", edit_post_path %>
<%= link_to "Destroy", @post, method: :delete %>
<%= link_to "Back", posts_path %>

<h4>Make a comment</h4>
<%= render 'comments/form' %>

<h4>Comments</h4>
<% @post.comments.each do |comment| %>
  <%= render comment %>
<% end %>




